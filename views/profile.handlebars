<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Submit a Venue Review:</h3>

    <form class="form new-review-form">
      <div class="form-group">
        <label for="venue-name">Venue Name:</label>
        <input class="form-input" type="text" id="venue-name" name="venue-name" />
      </div>
      <div class="form-group">
        <label for="review-rating">Rating:</label>
        <input class="form-input" type="number" id="review-rating" name="review-rating" />
      </div>
      <div class="form-group">
        <label for="review-content">Write your Review:</label>
        <textarea class="form-input" id="review-content" name="review-content"></textarea>
      </div>
      <div class="form-group">
        <button id="blog-submit-btn" type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if reviews.length}}
  <div class="col-md-6 review-list">
    <h3>Recent Reviews:</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{review.venue_name}}</h4>
        <p>Rating: {{review.rating}}</p>
        <p>{{review.content}}</p>
      </div>
      <!-- More actions as needed -->
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>

