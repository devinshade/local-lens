<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
  <div class="blog">
    <div>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <a href="/blog/{{blog.id}}">{{blog.name}}</a>
      </h2>
      <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
    </div>
    <div>
      <p>
        {{blog.description}}
      </p>
    </div>
  </div>
{{/each}}
